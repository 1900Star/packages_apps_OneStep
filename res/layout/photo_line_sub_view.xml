<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sidebar.view.PhotoLineSubView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/recent_photo_size"
        android:layout_height="@dimen/recent_photo_size"
        android:layout_margin="@dimen/recent_photo_padding"
        android:layout_gravity="center"
        android:src="@drawable/photo_mask"
        android:scaleType="fitXY"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/load_fail"
        android:layout_width="@dimen/recent_photo_size"
        android:layout_height="@dimen/recent_photo_size"
        android:layout_margin="@dimen/recent_photo_padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13.5dp"
        android:textColor="#ccffffff"
        android:text="@string/fail_to_load_image"
        android:background="#181818"
        android:visibility="invisible"/>
    <RelativeLayout
        android:id="@+id/open_gallery"
        android:layout_width="@dimen/recent_photo_size"
        android:layout_height="@dimen/recent_photo_size"
        android:layout_margin="@dimen/recent_photo_padding"
        android:background="@drawable/open_gallery"
        android:visibility="invisible">
        <TextView
            android:id="@+id/open_gallery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/open_gallery_item_text_bottom"
            android:textSize="10dp"
            android:textColor="#60ffffff"
            android:text="@string/open_gallery"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show_more"
        android:layout_width="@dimen/recent_photo_size"
        android:layout_height="@dimen/recent_photo_size"
        android:layout_margin="@dimen/recent_photo_padding"
        android:background="@drawable/more_photo"
        android:visibility="invisible">
        <TextView
            android:id="@+id/show_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/open_gallery_item_text_bottom"
            android:textSize="10dp"
            android:textColor="@color/content_view_interval_more_color"
            android:text="@string/load_more"/>
    </RelativeLayout>
</com.smartisanos.sidebar.view.PhotoLineSubView>
