<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar"
    android:id="@+id/add_resolve"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/add_resolve_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_application_shortcut"
        android:textColor="#4cffffff"
        android:textSize="13.5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>
    <!-- divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#14ffffff"/>
    <com.smartisanos.sidebar.view.FullGridView
        android:id="@+id/resolveinfo_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:numColumns="3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
</LinearLayout>
