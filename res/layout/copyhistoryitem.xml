<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sidebar.view.ListItemFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <LinearLayout
        android:id="@+id/date_label"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="#26000000"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/date_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textSize="10dp"
            android:textColor="#4cffffff"
            android:paddingLeft="15dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:singleLine="true"
        android:textSize="12dp"
        android:textColor="#ccffffff"
        android:gravity="center_vertical|left"
        />
</com.smartisanos.sidebar.view.ListItemFrameLayout>
