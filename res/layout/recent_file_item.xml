<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sidebar.view.ListItemFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/date_label"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="#26000000"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/date_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textSize="10dp"
            android:textColor="#4cffffff"
            android:paddingLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/recent_file_item"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        >
        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="9dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="13.5dp"
            android:textColor="#e6ffffff"
            android:gravity="center_vertical|left"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/more_label"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#9affffff"
            android:text="@string/list_view_look_more"
            />
    </LinearLayout>
</com.smartisanos.sidebar.view.ListItemFrameLayout>
