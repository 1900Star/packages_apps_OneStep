<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sidebar.view.ListItemFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <LinearLayout
        android:id="@+id/date_label"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="#26000000"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/date_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textSize="10dp"
            android:textColor="#4cffffff"
            android:paddingLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/recent_file_item"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="17dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="#ccffffff"
            android:gravity="center_vertical|left"/>
    </LinearLayout>
</com.smartisanos.sidebar.view.ListItemFrameLayout>
