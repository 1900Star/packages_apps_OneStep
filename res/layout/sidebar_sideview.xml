<?xml version="1.0" encoding="utf-8"?>
<com.smartisanos.sidebar.view.SideView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:smartisanos="http://schemas.android.com/apk/res/smartisanos"
    android:id="@+id/sidebar"
    android:layout_width="48dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85.3dp">
        <include layout="@layout/drag_scroll_view"/>
        <View
            android:id="@+id/right_shadow"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/right_shadow"/>
        <View
            android:id="@+id/left_shadow"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_gravity="right"
            android:background="@drawable/left_shadow"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/exit_and_add"
        android:layout_width="match_parent"
        android:layout_height="89.3dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:scaleType="center"/>
        <ImageView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:src="@drawable/setting"
            android:scaleType="center"/>
    </LinearLayout>
    <com.smartisanos.sidebar.view.DimSpaceView
        android:id="@+id/side_dim_view"
        android:background="@color/disable_dim_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.smartisanos.sidebar.view.SideView>
