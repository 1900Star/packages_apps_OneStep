<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar">
    <TextView
        android:id="@+id/date_content"
        android:layout_height="24dp"
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:background="@drawable/content_view_title_divider"
        android:textSize="10dp"
        android:textColor="@color/content_view_interval_time_color"
        android:paddingLeft="15dp"/>
    <com.smartisanos.sidebar.view.ListItemFrameLayout
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <LinearLayout
            android:id="@+id/text_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="13.5dp"
                android:textColor="#ccffffff"
                android:gravity="center_vertical|left"/>
            <ImageView
                android:id="@+id/copy_item_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/copy_icon"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/more_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/content_view_interval_more_color"
            android:text="@string/load_more"/>
    </com.smartisanos.sidebar.view.ListItemFrameLayout>
</merge>
