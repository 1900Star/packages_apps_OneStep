<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sidebar="http://schemas.android.com/apk/res/com.smartisanos.sidebar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="@dimen/recent_photo_size"
        android:layout_height="@dimen/recent_photo_size"
        android:layout_margin="@dimen/recent_photo_padding"
        android:background="@drawable/open_gallery">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/open_gallery_item_text_bottom"
            android:textSize="10dp"
            android:textColor="#9affffff"
            android:text="@string/open_gallery"/>
    </RelativeLayout>
</FrameLayout>
